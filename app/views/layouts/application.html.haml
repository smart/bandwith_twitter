== <!DOCTYPE html>
%html{ "xml:lang" => "en", :lang => "en", :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %meta{ :content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type" }
    %title
      = page_title

    /[if IE]
      = javascript_include_tag('html5')

    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'

    = stylesheet_link_tag "/javascripts/compiled/dijit/themes/nihilo/nihilo.css"
    %style
      :sass
        .dj_gecko
          .dijitToolbar
            .dijitButtonNode::-moz-focus-inner
              :padding 0

    %script
      = render :partial => 'layouts/dojo_config.js'
    = javascript_include_tag '/javascripts/compiled/dojo/dojo.js'
    = javascript_include_tag '/javascripts/compiled/bandwith/requirements.js'
    = javascript_include_tag 'behaviors'

    = yield :javascripts
    = yield :stylesheets

  %body.nihilo
    #container
      %header#header
        %h1
          %a{ :href => '/' }
            = page_title
        = render :partial => 'layouts/user_navigation'
        = render :partial => 'layouts/main_navigation'
      #wrapper
        %section#main
          = yield
          %footer#footer
            .block
              %p
                = copyright_text
        = render :partial => 'layouts/sidebar'
